
@{
    ViewBag.Parent = "旅游管理";
    ViewBag.Title = "编辑行程";
    Layout = "~/Views/Shared/_backLayout.cshtml";
}
<link href="~/Scripts/UEditor/themes/default/css/ueditor.min.css" rel="stylesheet" />
<link href="~/Content/components/calendar.min.css" rel="stylesheet" />
<div class="trip-management">
    <div class="tool-bar">
        <button class="ui basic button" id="saveTab">
            <i class="icon save"></i>
            保存：<span>通用信息</span>
        </button>
        <button class="ui basic button" id="saveAll">
            <i class="icon refresh"></i>
            发布线路
        </button>
        <hr />
    </div>
    <div id="tripContext" class="table-container">
        <div class="ui secondary menu">
            <a class="item active" data-tab="通用信息">通用信息</a>
            <a class="item" data-tab="产品概要">产品概要</a>
            <a class="item" data-tab="单日行程">单日行程</a>
            <a class="item" data-tab="发团属性">发团属性</a>
            <a class="item" data-tab="发团计划">发团计划</a>
        </div>
        <div class="ui tab segment active" data-tab="通用信息">
            <form class="ui small form" id="commonInfo">
                @Html.AntiForgeryToken()
                <div class="field">
                    <div class="inline field">
                        <label>产品编号</label>
                        <input type="text" name="productid" disabled data-category="Trip" data-db-key="ProductId">
                    </div>

                </div>
                <div class="field">
                    <div class="inline field">
                        <label>旅游标题<span class="red">&nbsp;*</span></label>
                        <input type="text" name="Name" placeholder="旅游路线名称" data-category="Trip" data-db-key="Name">
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>供应商<span class="red">&nbsp;*</span></label>
                        <input type="text" name="ProviderName" placeholder="供应商名称" data-category="CommonInfo" data-db-key="ProviderName">
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>团号</label>
                        <input type="text" name="GroupId" placeholder="请输入团号" data-category="CommonInfo" data-db-key="GroupId">
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>关键词</label>
                        <input type="text" name="name" placeholder="搜索关键词" data-category="Trip" data-db-key="Keyword">
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>所属地区<span class="red">&nbsp;*</span></label>
                        <div class="ui search selection dropdown" id="regionSelection">
                            <input type="hidden" name="RegionId" data-category="CommonInfo" data-db-key="RegionId">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择地区</div>
                            <div class="menu">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>行程分类<span class="red">&nbsp;*</span></label>
                        <div class="ui search multiple selection dropdown" id="typeSelection">
                            <input type="hidden" name="RegionId" data-category="CommonInfo" data-db-key="TripType">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择分类</div>
                            <div class="menu">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline fields">
                        <label>活动优惠</label>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="a">
                                <label>特价</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="b">
                                <label>限时促销</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="c">
                                <label>热卖</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="d">
                                <label>买二送二</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="e">
                                <label>买二送一</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="f">
                                <label>推荐</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="g">
                                <label>积分优惠</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox promotion">
                                <input type="checkbox" name="promotion" value="h">
                                <label>免费接机</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline fields" style="flex-wrap:wrap">
                        <label>主题活动</label>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="a">
                                <label>亲子游</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="b">
                                <label>自然风光</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="c">
                                <label>主题公园</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="d">
                                <label>都市名城</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="e">
                                <label>冒险之旅</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="f">
                                <label>毕业旅行</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="g">
                                <label>蜜月之旅</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="h">
                                <label>时尚购物</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="i">
                                <label>商务之旅</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="j">
                                <label>父母游</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="k">
                                <label>假期特惠</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="l">
                                <label>自由行</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="m">
                                <label>新年特惠</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="theme" value="n">
                                <label>特色游</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline fields">
                        <label>选择日期</label>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="1">
                                <label>星期一</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="2">
                                <label>星期二</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="3">
                                <label>星期三</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="4">
                                <label>星期四</label>
                            </div>   
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="5">
                                <label>星期五</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="6">
                                <label>星期六</label>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui checkbox availabledates">
                                <input type="checkbox" name="availabledates" value="7">
                                <label>星期天</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="three wide field">
                        <label>最低价格<span class="red">&nbsp;*</span></label>
                        <div class="ui selection dropdown" id="currency">
                            <input type="hidden" name="currency" data-db-key="CurrencyType">
                            <i class="dropdown icon"></i>
                            <div class="default text">币种</div>
                            <div class="menu">
                                <div class="item" data-value="1">人民币</div>
                                <div class="item" data-value="2">澳元</div>
                                <div class="item" data-value="3">美元</div>
                                <div class="item" data-value="4">欧元</div>
                            </div>
                        </div>
                    </div>
                    <div class="four wide field">
                        <input type="number" placeholder="价格" name="LowestPrice" min="0" data-db-key="LowestPrice" value="0">
                    </div>
                </div>
                <div class="inline fields">
                    <div class="three wide field">
                        <label>使用积分</label>
                        <div class="field">
                            <div class="ui checkbox theme">
                                <input type="checkbox" name="usepoints">
                                <label>是否使用?</label>
                            </div>
                        </div>
                    </div>
                    <div class="four wide field">
                        <input type="number" placeholder="可以使用的积分数量" name="Points" min="0" data-db-key="Points" value="0">
                    </div>
                </div>
                <div class="inline fields" id="photoListContainer">
                    <label>景点图片</label>
                    <div class="field">
                        <ul class="field saved-photo"></ul>
                        <hr />
                        <span class="ui basic green button">
                            <i class="icon add"></i>添加文件
                            <input type="file" name="files[]" id="fileUpload" multiple>
                        </span>
                        <button class="ui basic blue button save-all"><i class="icon play"></i>全部开始</button>
                        <button class="ui basic orange button cancel-all"><i class="icon delete"></i>全部取消</button>
                        <hr />
                        <div class="field" id="pendingList">
                        </div>
                    </div>

                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>价格说明</label>
                        <div class="ten wide field">
                            <div id="introduction"></div>
                        </div>
                    </div>

                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>费用包含</label>
                        <div class="ten wide field">
                            <div id="include">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>费用不包含</label>
                        <div class="ten wide field">
                            <div id="exclude">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>自费项目</label>
                        <div class="ten wide field">
                            <table class="ui celled table" id="selfpayActivities">
                                <thead>
                                    <tr>
                                        <th>名称</th>
                                        <th>价格</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><input type="text" class="selfpay-name" /></td>
                                        <td><input type="text" class="selfpay-price" /></td>
                                        <td><button class="ui red icon button delete"><i class="icon delete"></i></button></td>
                                    </tr>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" style="text-align:center"><button class="ui primary button add" type="button">添加</button></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="ui tab segment" data-tab="产品概要">
            <form class="ui small form" id="productInfo">
                <div class="field">
                    <div class="inline field">
                        <label>出发城市</label>
                        <div class="ui multiple search selection dropdown city-selection" id="departingCity">
                            <input type="hidden" name="DepartingCity" data-category="ProductInfo" data-db-key="DepartingCity">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择城市</div>
                            <div class="menu">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>到达城市</label>
                        <div class="ui multiple search selection dropdown city-selection" id="arrivingCity">
                            <input type="hidden" name="ArrivingCity" data-category="ProductInfo" data-db-key="ArrivingCity">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择城市</div>
                            <div class="menu">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>终点城市</label>
                        <div class="ui multiple search selection dropdown city-selection" id="finishingCity">
                            <input type="hidden" name="FinishingCity" data-category="ProductInfo" data-db-key="FinishingCity">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择城市</div>
                            <div class="menu">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>途经景点</label>
                        <div class="ui fluid multiple search selection dropdown scenery-selection" id="sceneries">
                            <input type="hidden" name="Sceneries" data-category="ProductInfo" data-db-key="Sceneries">
                            <i class="dropdown icon"></i>
                            <div class="default text">选择景点</div>
                            <div class="menu">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="inline field">
                        <label>行程天数</label>
                        <input type="number" name="TotalDays" placeholder="总共天数" data-category="ProductInfo" data-db-key="TotalDays" min="1" value="1">
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>行程特色</label>
                        <div class="ten wide field">
                            <div id="Feature">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>行程介绍</label>
                        <div class="ten wide field">
                            <div id="Intro">
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
        <div class="ui tab segment" data-tab="单日行程" id="scheduleList">
            <div class="ui top attached tabular menu"></div>
            <div id="scheduleContainer"></div>

        </div>
        <div class="ui tab segment" data-tab="发团属性" id="TripProperty">
            <form class="ui small form">
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>酒店升级</label>
                        <div class="ten wide field">
                            <table class="ui celled table" id="hotelUpgrade">
                                <thead>
                                    <tr>
                                        <th>酒店名称</th>
                                        <th>单人间</th>
                                        <th>双人间</th>
                                        <th>三人间</th>
                                        <th>四人间</th>
                                        <th>儿童加价</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="7" style="text-align:center"><button class="ui primary button add" type="button">添加</button></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>出发地点<span class="red">&nbsp;*</span></label>
                        <div class="ten wide field">
                            <div class="ui multiple search selection dropdown departure-selection">
                                <input type="hidden" name="DepartingLocation" data-category="TripProperty" data-db-key="DepartingLocation">
                                <i class="dropdown icon"></i>
                                <div class="default text">出发地</div>
                                <div class="menu">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>行程路线</label>
                        <div class="ten wide field">
                            <table class="ui celled table" id="selectableRoutes">
                                <thead>
                                    <tr>
                                        <th>线路名称</th>
                                        <th>线路景点</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="7" style="text-align:center"><button class="ui primary button add" type="button">添加</button></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="inline fields">
                    <div class="sixteen wide field">
                        <label>自选项目</label>
                        <div class="ten wide field">
                            <table class="ui celled table" id="selfChooseActivities">
                                <thead>
                                    <tr>
                                        <th>名称</th>
                                        <th>价格</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><input type="text" name="name" /></td>
                                        <td><input type="text" name="price" /></td>
                                        <td><button class="ui red icon button delete"><i class="icon delete"></i></button></td>
                                    </tr>

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" style="text-align:center"><button class="ui primary button add" type="button">添加</button></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="ui tab segment" data-tab="发团计划" id="TripPlans">
            <div class="ui top attached tabular menu">
            </div>
            <div class="ui bottom attached tab segment active" id="dateGenerator">
                <form class="ui small form">
                    <div class="inline fields">
                        <div class="sixteen wide field">
                            <label>发团类型</label>
                            <div class="ten wide field">
                                <div class="ui selection dropdown tripplan-dropdown trip-type">
                                    <input type="hidden" name="Type" data-category="TripPlan" data-db-key="Type">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">发团类型</div>
                                    <div class="menu">
                                        <div class="item selected" data-value="天天发团">天天发团</div>
                                        <div class="item" data-value="定期发团">定期发团</div>
                                        <div class="item" data-value="指定日期发团">指定日期发团</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="sixteen wide field">
                            <label>一天团</label>
                            <div class="ten wide field">
                                <div class="ui selection dropdown tripplan-dropdown oneday-only">
                                    <input type="hidden" name="IsOneDayOnly" data-category="TripPlan" data-db-key="IsOneDayOnly" value="false">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">一日游</div>
                                    <div class="menu">
                                        <div class="item " data-value="true">是</div>
                                        <div class="item selected" data-value="false">否</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="sixteen wide field">
                            <label>单人配房折扣</label>
                            <div class="ten wide field">
                                <div class="ui selection dropdown tripplan-dropdown room-diff">
                                    <input type="hidden" name="IsRoomDiffApplied" data-category="TripPlan" data-db-key="IsRoomDiffApplied" value="false">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">单人配房折扣</div>
                                    <div class="menu">
                                        <div class="item " data-value="true">是</div>
                                        <div class="item selected" data-value="false">否</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="inline fields plan-option everyday">
                        <div class="sixteen wide field">
                            <label>发团日期</label>
                            <div class="ten wide field">
                                <div class="three wide field">
                                    <div class="ui calendar depart-date">
                                        <input type="text" placeholder="From" name="startdate">
                                    </div>

                                </div>
                                <div class="field">到</div>
                                <div class="three wide field">
                                    <div class="ui calendar depart-date">
                                        <input type="text" placeholder="To" name="enddate">
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field plan-option regular-days">
                        <div class="inline fields">
                            <label>周信息</label>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="1">
                                    <label>周一</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="2">
                                    <label>周二</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="3">
                                    <label>周三</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="4">
                                    <label>周四</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="5">
                                    <label>周五</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui checkbox week">
                                    <input type="checkbox" name="week" value="6">
                                    <label>周六</label>
                                </div>
